{% extends 'base.html.twig' %}
{% block body %}

<div class="container mt-5">

  {% if company.error %}
    <h1>{{company.message}}</h1>
  {% else %}
  <h1 class="mb-3">{{title}}</h1>

  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title">{{company.data.company_name}}</h5>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><b>Sales: </b>{{company.data.sales}}</li>
      <li class="list-group-item"><b>Amount: </b>${{company.data.amount}}</li>
    </ul>
  </div>
  {% endif %}
</div>
{% endblock %}

